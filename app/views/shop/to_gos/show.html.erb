<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h4>予約詳細</h4>
    </div>
    
    <div class="col-md-8 mt-5">
      <table class="table table-borderless">
        <tr>
          <td>名前</td>
          <td><%= @to_go.name %></td>
        </tr>
        <tr>
          <td>連絡先</td>
          <td><%= @to_go.address %></td>
        </tr>
        <tr>
          <td>予約日</td>
          <td><%#= @to_go. %></td>
        </tr>
        <tr>
          <td>時間</td>
          <td><%= @to_go.time %></td>
        </tr>
        <tr>
          <td>備考</td>
          <td><%= @to_go.body %></td>
        </tr>
        <tr>
          <td>予約商品</td>
          <td><%#= @to_go. %></td>
        </tr>
      </table>
      
      <div class="to-go-edit">
        <%= link_to "予約編集", edit_to_go_path, class: "btn", style: "background-color: #64CCC5; color:white;" %>
      </div>
      
    </div>
  </div>
</div>